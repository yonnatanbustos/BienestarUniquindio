<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedor_login"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorFondo"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <include layout="@layout/app_bar_iniciar_sesion" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo" />

            </LinearLayout>


            <TextView
                android:id="@+id/labelUsuario"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/labelUsuario"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtUsuario"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_redondo"
                android:hint="@string/labelNombreUsuario"
                android:inputType="textEmailSubject"
                android:padding="@dimen/padding_edit_text"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/edit_text" />

            <TextView
                android:id="@+id/labelContrasena"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/labelContrasena"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/txtContrasena"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_redondo"
                android:hint="@string/labelContrasena"
                android:inputType="textPassword"
                android:padding="@dimen/padding_edit_text"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/edit_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnIngresarAdministrador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/boton_redondo"
                    android:onClick="abrirVentanaAdministrador"
                    android:text="@string/btnIngresarAdministrador"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnIngresarCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/boton_redondo"
                    android:onClick="abrirVentanaCliente"
                    android:text="@string/btnIngresarCliente"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btnIngresarEncargado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/boton_redondo"
                    android:onClick="abrirVentanaEncargado"
                    android:text="@string/btnIngresarEncargado"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">


                <TextView
                    android:id="@+id/labelRegistrarse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:linksClickable="true"
                    android:singleLine="true"
                    android:text="@string/labelRegistrarse"
                    android:textAlignment="center"
                    android:textColor="#002299"
                    android:textSize="30dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>